{
  "name": "la-flamita-iot",
  "version": "1.0.0",
  "description": "La flamita IoT ElectronJS tool",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/InterdataUTJ/la-flamita-iot.git"
  },
  "keywords": [
    "la-flamita-iot",
    "la-flamita",
    "iot",
    "IoT",
    "esp32",
    "arduino",
    "cpp",
    "c++"
  ],
  "author": "InterdataUTJ",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/InterdataUTJ/la-flamita-iot/issues"
  },
  "homepage": "https://github.com/InterdataUTJ/la-flamita-iot#readme",
  "devDependencies": {
    "electron": "32.1.2",
    "electron-builder": "^25.1.7"
  },
  "dependencies": {
    "node-wifi": "^2.0.16",
    "serialport": "12.0.0"
  },
  "build": {
    "appId": "com.interdatautj.laflamita",
    "mac": { "category": "public.app-category.utilities" },
    "portable": { "artifactName": "la_flamita_iot.exe" },
    "win": { 
      "target": ["portable"],
      "icon": "build/logo.png"
    }
  }
}
